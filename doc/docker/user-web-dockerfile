FROM library/openjdk:17.0.2-oracle
VOLUME /data/logs/user-web/
ADD user-service/user-web/target/user-web.jar /root/user-web.jar
RUN ln -sf /usr/share/zoneinfo/Asia/Shanghai /etc/localtime && echo 'Asia/Shanghai' > /etc/timezone
EXPOSE 9001
ENV JAVA_OPTS=""
ENV APP_OPTS=""
ENTRYPOINT ["java", "${JAVA_OPTS}", "-jar", "${APP_OPTS}","/root/user-web.jar"]