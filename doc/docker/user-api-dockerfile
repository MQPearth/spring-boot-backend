FROM library/openjdk:17.0.2-oracle
VOLUME /data/logs/user-api/
ADD api/user-api/target/user-api.jar /root/user-api.jar
RUN ln -sf /usr/share/zoneinfo/Asia/Shanghai /etc/localtime && echo 'Asia/Shanghai' > /etc/timezone
EXPOSE 8001
ENV JAVA_OPTS=""
ENV APP_OPTS=""
ENTRYPOINT ["sh", "-c", "java $JAVA_OPTS -jar $APP_OPTS /root/user-api.jar"]