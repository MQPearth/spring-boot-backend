FROM library/openjdk:17.0.2-oracle
VOLUME /data/logs/gateway/
EXPOSE 8000

RUN adduser java
RUN mkdir -p /data/logs/gateway/
RUN chown -R java /data/
RUN chmod -R 750 /data/

RUN ln -sf /usr/share/zoneinfo/Asia/Shanghai /etc/localtime && echo 'Asia/Shanghai' > /etc/timezone

ADD gateway/target/gateway.jar /home/java/gateway.jar
COPY doc/skywalking-agent/ /home/java/skywalking-agent/

RUN chown -R java /home/java/

RUN chmod -R 750 /home/java/

USER java

ENV JAVA_OPTS=""
ENV APP_OPTS=""

ENTRYPOINT ["sh", "-c", "java $JAVA_OPTS -jar $APP_OPTS /home/java/gateway.jar"]